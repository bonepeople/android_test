<?xml version="1.0" encoding="utf-8"?>
<!-- 白色的背景带一个圆角灰色的边框，主要用于各个模块或部分的背景 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <corners android:radius="4dp" />

    <solid android:color="#FFFFFF" />

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

    <stroke
        android:width="1dp"
        android:color="@color/background_main" />

</shape>